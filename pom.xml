    <groupId>com.bq.oss.lib</groupId>
    <artifactId>mongodb</artifactId>
    <version>0.2.0</version>

    <name>lib-mongodb</name>

    <description>MongoDB Connection Library</description>
    <url>https://github.com/bq/lib-mongodb</url>

    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <organization>
        <name>bq</name>
        <url>http://www.bq.com/</url>
    </organization>

    <scm>
        <connection>scm:git:ssh://bq-devtools@git.dev.bqsoftware.net:29418/lib-mongodb</connection>
        <developerConnection>scm:git:ssh://bq-devtools@git.dev.bqsoftware.net:29418/lib-mongodb</developerConnection>
        <url>https://github.com/bq/lib-mongodb</url>
        <tag>mongodb-0.2.0</tag>
    </scm>

    <dependencies>
        <dependency>
            <groupId>com.bq.oss.lib</groupId>
            <artifactId>config</artifactId>
            <version>0.2.0</version>
        </dependency>
        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
            <version>2.3</version>
        </dependency>
        <dependency>
            <groupId>org.springframework.data</groupId>
            <artifactId>spring-data-mongodb</artifactId>
            <version>1.6.1.RELEASE</version>
            <exclusions>
            	<exclusion>
            		<groupId>org.springframework</groupId>
            		<artifactId>spring-expression</artifactId>
            	</exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
            <version>18.0</version>
        </dependency>
        <dependency>
            <groupId>joda-time</groupId>
            <artifactId>joda-time</artifactId>
            <version>2.5</version>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>release-sign-artifacts</id>
            <activation>
                <property>
                    <name>performRelease</name>
                    <value>true</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-gpg-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>sign-artifacts</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>sign</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <ciManagement>
        <system>Travis CI</system>
        <url>https://travis-ci.org/bq/lib-mongodb</url>
    </ciManagement>

    <issueManagement>
        <url>https://github.com/bq/lib-mongodb/issues</url>
        <system>GitHub Issues</system>
    </issueManagement>

